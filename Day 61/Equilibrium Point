class Solution {
    // Function to find equilibrium point in the array.
    public static int findEquilibrium(int arr[]) {
        // code here
        int n=arr.length;
        int total=0;
        for(int num:arr){
            total+=num;
        }
        
        int leftsum=0;
        for(int i=0;i<n;i++){
            int rightsum=total-leftsum-arr[i];
        
        
        if(leftsum==rightsum){
            return i;
        }
        
        leftsum+=arr[i];
        }
        return -1;
    }
}
