class Solution {
    public int minPlatform(int arr[], int dep[]) {
        //  code here
        int n=arr.length;
        Arrays.sort(arr);
        Arrays.sort(dep);
        int i=0;
        int j=0;
        int platforms=0;
        int maxplatforms=0;
        while(i<n && j<n){
            if(arr[i]<=dep[j]){
                platforms++;
                i++;
                maxplatforms=Math.max(platforms,maxplatforms);
            }else{
                platforms--;
                j++;
            }
        }
        
        return maxplatforms;
    }
}
