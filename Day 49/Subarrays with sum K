class Solution {
    public int cntSubarrays(int[] arr, int k) {
        // code here
        int n=arr.length;
        HashMap<Integer,Integer> mpp=new HashMap<>();
        mpp.put(0,1);
        int presum=0;
        int count=0;
        for(int i=0;i<n;i++){
            presum+=arr[i];
            int remove=presum-k;
            count+=mpp.getOrDefault(remove,0);
            mpp.put(presum,mpp.getOrDefault(presum,0)+1);
        }
        
        return count;
    }
}
