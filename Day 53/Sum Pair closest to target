class Solution {
    public ArrayList<Integer> sumClosest(int[] arr, int target) {
        // code here
        ArrayList<Integer> result=new ArrayList<>();
        int n=arr.length;
        if(n<2) return result;
        Arrays.sort(arr);
        int left=0;
        int right=n-1;
        int closediff=Integer.MAX_VALUE;
        int maxabsdiff=-1;
        while(left<right){
            int sum=arr[left]+arr[right];
            int diff=Math.abs(sum-target);
            
            if(diff<closediff  ||  (diff==closediff && Math.abs(arr[right]-arr[left])>maxabsdiff)){
                closediff=diff;
                maxabsdiff=Math.abs(arr[right]-arr[left]);
                result=new ArrayList<>(Arrays.asList(arr[left],arr[right]));
            }
            
            
            if(sum<target){
                left++;
            }else{
                right--;
            }
        }
        
        
        
        
        return result;
        
    }
}
