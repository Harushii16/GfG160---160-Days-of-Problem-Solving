class Solution {
    static int maxLength(String s) {
        // code here
        int left=0,right=0,maxlen=0;
        for(char c:s.toCharArray()){
            if(c=='(') left++;
            else right++;
            
            if(left==right){
                maxlen=Math.max(maxlen,2*right);
            }else if(right>left){
                left=right=0;
            }
        }
        
        left=right=0;
        for(int i=s.length()-1;i>=0;i--){
            char c=s.charAt(i);
            
            if(c=='(') left++;
            else right++;
            
            if(left==right){
                maxlen=Math.max(maxlen,2*right);
            }else if(left>right){
                left=right=0;
            }
            
        }
        
        return maxlen;
    }
}
