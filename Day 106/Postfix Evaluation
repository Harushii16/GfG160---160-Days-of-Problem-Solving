class Solution {
    public int evaluatePostfix(String[] arr) {
        // code here
        Stack<Integer> st=new Stack<>();
        for(String s:arr){
            if(s.equals("+") || s.equals("-")  ||  s.equals("*")  || s.equals("/")  || s.equals("^") ){
                int b=st.pop();
                int a=st.pop();
                
                int res=0;
                
                
                switch(s){
                    case "+": res=a+b;break;
                    case "-": res=a-b;break;
                    case "*": res=a*b;break;
                    case "/": 
                        res=Math.floorDiv(a,b);
                        break;
                    case "^": res=(int)Math.pow(a,b);break;
                }
                st.push(res);
            }else{
                st.push(Integer.parseInt(s));
            }
        }
        
        return st.pop();
    }
}
