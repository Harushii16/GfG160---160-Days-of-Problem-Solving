/*
class Node {
    int data;
    Node left, right;

    public Node(int d)
    {
        data = d;
        left = right = null;
    }
}
*/

class Solution {
    public int kthSmallest(Node root, int k) {
         inorder(root,k);
            return ans;
    }
        // code here
        int count=0;
        int ans=-1;
       
        private void inorder(Node root,int k){
            if(root==null || ans!=-1)return;
            inorder(root.left,k);
            count++;
            if(count==k){
                ans=root.data;
                return;
            }
            inorder(root.right,k);
        }
}
