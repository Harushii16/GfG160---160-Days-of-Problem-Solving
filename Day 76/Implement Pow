class Solution {
    double power(double b, int e) {
        // code here
        if(e<0){
            b=1/b;
            e=-e;
        }
        if(e==0){
            return 1.0;
        }
        if(e==1){
            return b;
        }
        
        double halfpower=power(b,e/2);
        if(e%2==0){
            return halfpower*halfpower;
        }else{
            return b*halfpower*halfpower;
        }
    }
}
