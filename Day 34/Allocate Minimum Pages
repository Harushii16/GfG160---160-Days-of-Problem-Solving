class Solution {
    public int findPages(int[] arr, int k) {
        // code here
        int n=arr.length;
        if(k>n) return -1;
        
        int low=0;
        int high=0;
        for(int pages:arr){
            low=Math.max(low,pages);
            high+=pages;
        }
        
        int ans=-1;
        while(low<=high){
            int mid=low+(high-low)/2;
            if(ispossible(arr,k,mid)){
                ans=mid;
                high=mid-1;
            }else{
                low=mid+1;
            }
        }
        
        return ans;
    }
    
    
    public boolean ispossible(int arr[],int k,int maxpages){
        int students=1;
        int pagesum=0;
        
        for(int pages:arr){
            if(pagesum+pages>maxpages){
                students++;
                pagesum=pages;
                if(students>k) return false;
            }else{
                pagesum+=pages;
            }
        }
        
        return true;
    }
}
